<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="0dip"
        android:id="@+id/img_reg_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/text_reg_list_loc"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_title_black_24dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_date"
        app:layout_constraintRight_toLeftOf="@id/text_reg_list_title"
        app:layout_constraintTop_toTopOf="@id/img_reg_list"
        android:id="@+id/img_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_reg_list_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_reg_list"
        android:text="sample"
        android:textSize="15dp"
        android:padding="2dp"
        android:layout_marginLeft="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img_reg_list"
        app:layout_constraintRight_toLeftOf="@+id/text_reg_list_date"
        app:layout_constraintTop_toBottomOf="@id/img_title"
        android:id="@+id/img_date"
        android:src="@drawable/ic_date_range_black_24dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_reg_list_date"
        app:layout_constraintLeft_toRightOf="@+id/img_reg_list"
        app:layout_constraintTop_toBottomOf="@id/text_reg_list_title"
        android:text="sample"
        android:textSize="15dp"
        android:padding="2dp"
        android:layout_marginLeft="30dp"
        />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_people_outline_black_24dp"
    app:layout_constraintTop_toBottomOf="@id/img_date"
    app:layout_constraintLeft_toRightOf="@id/img_reg_list"
    app:layout_constraintRight_toLeftOf="@id/text_reg_list_count"
    android:id="@+id/img_count"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_reg_list_count"
        app:layout_constraintTop_toBottomOf="@+id/text_reg_list_date"
        app:layout_constraintLeft_toRightOf="@+id/img_reg_list"
        android:text="sample"
        android:textSize="15dp"
        android:padding="2dp"
        android:layout_marginLeft="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location_on_black_24dp"
        android:id="@+id/img_loc"
        app:layout_constraintLeft_toRightOf="@id/img_reg_list"
        app:layout_constraintRight_toLeftOf="@id/text_reg_list_loc"
        app:layout_constraintTop_toBottomOf="@id/img_count"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_reg_list_loc"
        app:layout_constraintTop_toBottomOf="@+id/text_reg_list_count"
        app:layout_constraintLeft_toRightOf="@+id/img_reg_list"
        android:text="sample"
        android:textSize="15dp"
        android:padding="2dp"
        android:layout_marginLeft="30dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>